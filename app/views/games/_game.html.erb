        <td><%= @game.outfield_fly %></td>
        <td><%= @game.infield_linera %></td>
        <td><%= @game.out_linera %></td>
        <td><%= @game.strikeouts %></td>
        <td><%= @game.runs_batted_in %></td>
        <td><%= @game.runs_scored %></td>
        <td><%= @game.stolen_bases %></td>
        <td><%= @game.pitching_number %></td>
        <td><%= @game.hit %></td>
        <td><%= @game.run %></td>
        <td><%= @game.get_strikeouts %></td>
      </tr>
